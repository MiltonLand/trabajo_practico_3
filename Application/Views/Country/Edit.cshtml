@model Services.Dtos.CountryDto 

@{
    ViewBag.Title = "Editar país";
}

<h2>Editar país</h2>


<form action="/country/update" method="post" class="validate-form">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h6>Por favor ingrese el nuevo valor para cada campo que quiera modificar</h6>
        <hr />

        <div class="form-group">
            @Html.Label("Nombre", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input id="newCountryName" value="@Model.CountryName" class="form-control" type="text" name="newCountryName" />
                    
                @Html.HiddenFor(model => model.CountryID)
                    
                <br />

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="/country/index" class="btn cancel btn-side-margin btn-glow">Cancelar</a>
                <button type="reset" class="btn btn-default cancel">Resetear</button>
                <button type="submit" class="btn btn-default accept">Guardar cambios</button>
            </div>
        </div>

    </div>
</form>