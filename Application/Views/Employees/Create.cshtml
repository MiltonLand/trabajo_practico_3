@model List<Services.Dtos.CountryDto>

@{
    ViewBag.Title = "Crear";
}

<h2>Crear empleado</h2>


<form action="/employees/creation" method="post" class="validate-form">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Nombre</label>
            <div class="col-md-10">
                <input required type="text" name="fName" placeholder="Nombre" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Apellido</label>
            <div class="col-md-10">
                <input required type="text" name="lName" placeholder="Apellido" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">País</label>
            <div class="col-md-10">
                <select name="countryId" class="btn btn-block">
                    @foreach (var p in Model)
                    {
                        <option value="@p.CountryID">@p.CountryName</option>
                    }
                </select>
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-md-2">Turno</label>
            <div class="col-md-10">

                <select name="shift" class="btn btn-block">
                    <option value="mañana">Mañana</option>
                    <option value="tarde">Tarde</option>
                    <option value="noche">Noche</option>
                </select>

            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Fecha de ingreso</label>
            <div class="col-md-10">
                <input required class="datepicker btn date-input" name="hireDate">
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="reset" class="btn cancel btn-side-margin btn-glow">Cancelar</button>
                <button type="submit" class="btn accept btn-side-margin btn-glow">Crear</button>
            </div>
        </div>
    </div>
</form>

<div>
    @Html.ActionLink("Volver", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}